  <?xml version="1.0" encoding="UTF-8" ?> 
<configuration>

  <appender name="FILE"
    class="ch.qos.logback.core.FileAppender">
    <file>myApp.log</file>
    <layout class="ch.qos.logback.classic.PatternLayout">
      <Pattern>%msg%n</Pattern>
    </layout>
  </appender>

  <root>
    <level value="debug" />
    <appender-ref ref="FILE" />
  </root>
</configuration>